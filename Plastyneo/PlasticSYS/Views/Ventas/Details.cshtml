@model PlasticSYS.Models.Venta

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<h1><i class="bi bi-cart-check-fill"></i> Detalles de Venta</h1>

<div class="sale-details-card">
    <h4><i class="bi bi-info-circle"></i> Información de la Venta</h4>
    <hr />
    <dl class="row details-list">
        <dt class="col-sm-3 detail-label">
            <i class="bi bi-calendar-date"></i> @Html.DisplayNameFor(model => model.FechaVenta)
        </dt>
        <dd class="col-sm-9 detail-value">
            @Html.DisplayFor(model => model.FechaVenta)
        </dd>

        <dt class="col-sm-3 detail-label">
            <i class="bi bi-currency-dollar"></i> @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-9 detail-value">
            @Html.DisplayFor(model => model.Total)
        </dd>

        <dt class="col-sm-3 detail-label">
            <i class="bi bi-person-vcard"></i> @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-9 detail-value">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </dd>

        <dt class="col-sm-3 detail-label">
            <i class="bi bi-box-seam"></i> @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class="col-sm-9 detail-value">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
    </dl>
</div>

<div class="action-buttons mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.VentaId" class="btn btn-edit">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-back">
        <i class="bi bi-arrow-left"></i> Volver al Listado
    </a>
</div>

<style>
    /* Estilos generales */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        color: #6c757d;
        margin-bottom: 20px;
        font-weight: 300;
    }

    h4 {
        color: #adb5bd;
        font-weight: 300;
        margin-bottom: 15px;
    }

    hr {
        border-top: 1px solid #e9ecef;
        margin: 15px 0;
    }

    /* Tarjeta de detalles */
    .sale-details-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    /* Lista de detalles */
    .details-list {
        margin: 0;
    }

    .detail-label {
        color: #6c757d;
        padding: 12px 0;
        font-weight: 500;
    }

    .detail-value {
        color: #495057;
        padding: 12px 0;
        padding-left: 20px;
        border-radius: 5px;
        margin-bottom: 10px;
        background-color: #f8f9fa;
    }

    /* Botones */
    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-edit {
        background-color: #d0ebff;
        border-color: #d0ebff;
        color: #1971c2;
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
    }

        .btn-edit:hover {
            background-color: #a5d8ff;
            border-color: #a5d8ff;
            color: #1971c2;
        }

    .btn-back {
        background-color: #e6fcf5;
        border-color: #e6fcf5;
        color: #0ca678;
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background-color: #c3fae8;
            border-color: #c3fae8;
            color: #0ca678;
        }

    /* Iconos */
    .bi {
        margin-right: 8px;
    }

    .bi-cart-check-fill {
        color: #74c0fc;
    }

    .bi-info-circle {
        color: #74c0fc;
    }

    .bi-calendar-date {
        color: #748ffc;
    }

    .bi-currency-dollar {
        color: #51cf66;
    }

    .bi-person-vcard {
        color: #4dabf7;
    }

    .bi-box-seam {
        color: #f783ac;
    }
</style>
