@model PlasticSYS.Models.Venta

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<h1><i class="bi bi-cart-check-fill"></i> Editar Venta</h1>

<h4><i class="bi bi-pencil-square"></i> Datos de la Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="edit-sale-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VentaId" />

            <div class="form-group">
                <label asp-for="FechaVenta" class="control-label">
                    <i class="bi bi-calendar-date"></i> Fecha de Venta
                </label>
                <input asp-for="FechaVenta" class="form-control" />
                <span asp-validation-for="FechaVenta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Total" class="control-label">
                    <i class="bi bi-currency-dollar"></i> Total
                </label>
                <input asp-for="Total" class="form-control" placeholder="Ingrese el total" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">
                    <i class="bi bi-person-vcard-fill"></i> Cliente
                </label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">Seleccione un cliente</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductoId" class="control-label">
                    <i class="bi bi-box-seam-fill"></i> Producto
                </label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId">
                    <option value="">Seleccione un producto</option>
                </select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>

            <div class="form-group button-group mt-4">
                <button type="submit" class="btn btn-save">
                    <i class="bi bi-check-circle"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-cancel">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Estilos generales */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        color: #6c757d;
        margin-bottom: 20px;
        font-weight: 300;
    }

    h4 {
        color: #adb5bd;
        font-weight: 300;
    }

    hr {
        border-top: 1px solid #dee2e6;
        margin-bottom: 30px;
    }

    /* Estilos del formulario */
    .edit-sale-form {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }

    .form-control {
        border-radius: 20px;
        border: 1px solid #ced4da;
        padding: 10px 15px;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #a5d8ff;
            box-shadow: 0 0 0 0.2rem rgba(165, 216, 255, 0.25);
            background-color: white;
        }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: #6c757d;
        margin-bottom: 8px;
        font-weight: 500;
    }

    /* Estilos de los botones */
    .btn-save {
        background-color: #b2f2bb;
        border-color: #b2f2bb;
        color: #2b8a3e;
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
    }

        .btn-save:hover {
            background-color: #8ce99a;
            border-color: #8ce99a;
            color: #2b8a3e;
        }

    .btn-cancel {
        background-color: #d0ebff;
        border-color: #d0ebff;
        color: #1971c2;
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
        margin-left: 10px;
    }

        .btn-cancel:hover {
            background-color: #a5d8ff;
            border-color: #a5d8ff;
            color: #1971c2;
        }

    .button-group {
        display: flex;
        justify-content: flex-start;
    }

    /* Estilos de validación */
    .text-danger {
        color: #ff8787 !important;
        font-size: 0.85rem;
    }

    /* Iconos */
    .bi {
        margin-right: 8px;
    }

    .bi-cart-check-fill {
        color: #74c0fc;
    }

    .bi-pencil-square {
        color: #74c0fc;
    }

    .bi-calendar-date {
        color: #748ffc;
    }

    .bi-currency-dollar {
        color: #51cf66;
    }

    .bi-person-vcard-fill {
        color: #4dabf7;
    }

    .bi-box-seam-fill {
        color: #f783ac;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
