@model PlasticSYS.Models.Producto

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="delete-product-container">
    <h1 class="delete-title"><i class="bi bi-trash-fill"></i> Eliminar Producto</h1>

    <div class="alert alert-warning">
        <h4><i class="bi bi-exclamation-triangle-fill"></i> ¿Estás seguro que deseas eliminar este producto?</h4>
        <p>Esta acción no se puede deshacer y eliminará permanentemente el producto del sistema.</p>
    </div>

    <div class="product-details-card">
        <h4 class="details-subtitle"><i class="bi bi-box-seam"></i> Detalles del Producto</h4>
        <hr class="details-divider" />

        <dl class="details-list">
            <div class="detail-item">
                <dt class="detail-label">
                    <i class="bi bi-tag"></i> @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="detail-value">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </div>

            <div class="detail-item">
                <dt class="detail-label">
                    <i class="bi bi-currency-dollar"></i> @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="detail-value">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
            </div>

            <div class="detail-item">
                <dt class="detail-label">
                    <i class="bi bi-bookmark"></i> @Html.DisplayNameFor(model => model.Marca)
                </dt>
                <dd class="detail-value">
                    @Html.DisplayFor(model => model.Marca.Nombre)
                </dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="ProductoId" />
        <div class="action-buttons">
            <button type="submit" class="btn-delete">
                <i class="bi bi-trash-fill"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn-cancel">
                <i class="bi bi-arrow-left"></i> Volver al Listado
            </a>
        </div>
    </form>
</div>

<style>
    /* Estilos generales */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px;
    }

    .delete-product-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    /* Títulos */
    .delete-title {
        color: #dc3545;
        margin-bottom: 20px;
        font-weight: 300;
        font-size: 28px;
    }

    .details-subtitle {
        color: #6c757d;
        font-weight: 300;
        margin-bottom: 15px;
    }

    .details-divider {
        border-top: 1px solid #dee2e6;
        margin: 10px 0 20px 0;
    }

    /* Alerta de advertencia */
    .alert-warning {
        background-color: #fff3bf;
        border-left: 4px solid #ffc107;
        color: #856404;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }

        .alert-warning h4 {
            margin-top: 0;
            color: #856404;
        }

    /* Tarjeta de detalles */
    .product-details-card {
        margin-bottom: 30px;
    }

    /* Lista de detalles */
    .details-list {
        margin: 0;
        padding: 0;
    }

    .detail-item {
        margin-bottom: 15px;
        display: flex;
        flex-wrap: wrap;
    }

    .detail-label {
        color: #495057;
        font-weight: 500;
        width: 200px;
        padding: 8px 0;
        display: flex;
        align-items: center;
    }

    .detail-value {
        color: #212529;
        padding: 8px 15px;
        background-color: #f8f9fa;
        border-radius: 5px;
        flex: 1;
        min-width: 200px;
        margin-left: 15px;
        display: flex;
        align-items: center;
    }

    /* Formulario de eliminación */
    .delete-form {
        margin-top: 30px;
    }

    /* Botones de acción */
    .action-buttons {
        display: flex;
        gap: 15px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    /* Iconos */
    .bi {
        margin-right: 8px;
    }

    .bi-trash-fill {
        color: white;
    }

    .bi-exclamation-triangle-fill {
        color: #ffc107;
    }

    .bi-box-seam {
        color: #6c757d;
    }

    .bi-tag {
        color: #6c757d;
    }

    .bi-currency-dollar {
        color: #28a745;
    }

    .bi-bookmark {
        color: #6c757d;
    }

    .bi-arrow-left {
        color: white;
    }
</style>