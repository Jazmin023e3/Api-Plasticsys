<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlasticSYS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlasticSYS.styles.css" asp-append-version="true" />
</head>
<body class="layout-body">
    <header class="layout-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-pastel box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-recycle"></i> PlasticSYS
                </a>
                <span id="Nombre">@User.Identity.Name</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i> Privacy
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Productos" asp-action="Index">
                                    <i class="bi bi-box-seam"></i> Productos
                                </a>
                            </li>
                            @if (User.IsInRole("ADMINISTRADOR"))
                            {
                               
                                
                               
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Usuarios
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Operador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Marcas" asp-action="Index">
                                        <i class="bi bi-bookmark-star"></i> Marcas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">
                                        <i class="bi bi-people"></i> Clientes
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Ventas" asp-action="Index">
                                        <i class="bi bi-cart"></i> Ventas
                                    </a>
                                </li>
                                
                            }
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link logout-link" asp-area="" asp-controller="Usuarios" asp-action="CerrarSession">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link login-link" asp-area="" asp-controller="Usuarios" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-pastel">
        <div class="container">
            &copy; 2025 - PlasticSYS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* Estilos generales */
        .layout-body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        #Nombre{
            color: #1976d2 !important;
            font-weight:500 ;
        }

        /* Barra de navegación */
        .navbar-pastel {
            background-color: #e3f2fd;
            border-bottom: 1px solid #bbdefb;
        }

        .navbar-brand {
            font-weight: 500;
            color: #1976d2 !important;
            font-size: 1.3rem;
        }

            .navbar-brand i {
                margin-right: 8px;
            }

        .nav-link {
            color: #5a6a85 !important;
            padding: 0.5rem 1rem;
            margin: 0 0.2rem;
            border-radius: 4px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
        }

            .nav-link i {
                margin-right: 6px;
                font-size: 1.1rem;
            }

            .nav-link:hover {
                background-color: #bbdefb;
                color: #0d47a1 !important;
            }

        .login-link {
            background-color: #c8e6c9;
        }

            .login-link:hover {
                background-color: #a5d6a7;
            }

        .logout-link {
            background-color: #ffcdd2;
        }

            .logout-link:hover {
                background-color: #ef9a9a;
            }

        /* Contenido principal */
        .main-container {
            flex: 1;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        /* Footer */
        .footer-pastel {
            background-color: #e3f2fd;
            border-top: 1px solid #bbdefb;
            color: #5a6a85;
            padding: 15px 0;
        }

            .footer-pastel a {
                color: #1976d2;
                text-decoration: none;
            }

                .footer-pastel a:hover {
                    text-decoration: underline;
                }

        /* Efectos adicionales */
        .navbar-toggler {
            border-color: rgba(25, 118, 210, 0.3);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%2825, 118, 210, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
    </style>
</body>
</html>
