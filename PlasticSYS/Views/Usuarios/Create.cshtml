@model PlasticSYS.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<h1>Crear Usuario</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">
                    <i class="bi bi-person-fill"></i> Nombre
                </label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label">
                    <i class="bi bi-envelope-fill"></i> Correo
                </label>
                <input asp-for="Correo" class="form-control" placeholder="Ingrese el correo" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pasword" class="control-label">
                    <i class="bi bi-lock-fill"></i> Contraseña
                </label>
                <input asp-for="Pasword" class="form-control" placeholder="Ingrese la contraseña" />
                <span asp-validation-for="Pasword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rol" class="control-label">
                    <i class="bi bi-person-badge-fill"></i> Rol
                </label>
                <select asp-for="Rol" class="form-control">
                    <option value="">Seleccione un rol</option>
                    <option value="ADMINISTRADOR">Administrador</option>
                    <option value="Operador">Operador</option>
                
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" value="Crear" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Regresar
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Estilos generales */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    h1 {
        color: #6c757d;
        margin-bottom: 20px;
        font-weight: 300;
    }
    
    h4 {
        color: #adb5bd;
        font-weight: 300;
    }
    
    hr {
        border-top: 1px solid #dee2e6;
        margin-bottom: 30px;
    }
    
    /* Estilos del formulario */
    .form-control {
        border-radius: 20px;
        border: 1px solid #ced4da;
        padding: 10px 15px;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        border-color: #a5d8ff;
        box-shadow: 0 0 0 0.2rem rgba(165, 216, 255, 0.25);
        background-color: white;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    label {
        color: #6c757d;
        margin-bottom: 8px;
        font-weight: 500;
    }
    
    /* Estilos de los botones */
    .btn-primary {
        background-color: #a5d8ff;
        border-color: #a5d8ff;
        color: #495057;
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
    }
    
    .btn-primary:hover {
        background-color: #74c0fc;
        border-color: #74c0fc;
        color: white;
    }
    
    .btn-secondary {
        background-color: #d0ebff;
        border-color: #d0ebff;
        color: #495057;
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
    }
    
    .btn-secondary:hover {
        background-color: #a5d8ff;
        border-color: #a5d8ff;
        color: #495057;
    }
    
    /* Estilos de validación */
    .text-danger {
        color: #ff8787 !important;
        font-size: 0.85rem;
    }
    
    /* Iconos */
    .bi {
        margin-right: 8px;
        color: #74c0fc;
    }
    
    /* Contenedor del formulario */
    .col-md-4 {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }
</style>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
