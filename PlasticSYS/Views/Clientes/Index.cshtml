@model IEnumerable<PlasticSYS.Models.Cliente>

@{
    ViewData["Title"] = "Menu";
    var Buscarcliente = new Cliente();
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="client-container">
    <h1 class="client-title"><i class="bi bi-people-fill"></i> Menú de Clientes</h1>

    <!-- Sección de Búsqueda -->
    <div class="search-card">
        <form asp-action="Index" class="search-form">
            <div class="search-row">
                <div class="search-group">
                    <label asp-for="@Buscarcliente.Nombre" class="control-label">
                        <i class="bi bi-person"></i> Nombre
                    </label>
                    <input name="Nombre" class="form-control search-input" placeholder="Buscar por nombre" />
                </div>

                <div class="search-group">
                    <label class="control-label">
                        <i class="bi bi-list-ol"></i> Registros
                    </label>
                    <select name="registros" class="form-control records-select">
                        <option value="10">10</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="40">40</option>
                        <option value="50">50</option>
                        <option value="0">Todos</option>
                    </select>
                </div>

                <div class="button-group">
                    <button type="submit" class="btn btn-search">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-action="Create" class="btn btn-new-client">
                        <i class="bi bi-plus-circle"></i> Nuevo Cliente
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Tabla de Clientes -->
    <div class="table-responsive">
        <table class="table client-table" id="myTable">
            <thead>
                <tr class="table-header">
                    <th>
                        <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        <i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pie de página -->
    <footer class="client-footer">
        <div class="footer-content">
            <p>Sistema de Gestión de Clientes © @DateTime.Now.Year</p>
            <div class="footer-links">
                <a href="#"><i class="bi bi-info-circle"></i> Ayuda</a>
                <a href="#"><i class="bi bi-shield-lock"></i> Privacidad</a>
                <a href="#"><i class="bi bi-question-circle"></i> Términos</a>
            </div>
        </div>
    </footer>
</div>

<style>
    /* Estilos generales */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 20px;
        color: #495057;
    }

    .client-container {
        max-width: 1200px;
        margin: 0 auto;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        padding: 25px;
        min-height: calc(100vh - 100px);
        display: flex;
        flex-direction: column;
    }

    .client-title {
        color: #6c757d;
        margin-bottom: 25px;
        font-weight: 300;
        padding-bottom: 15px;
        border-bottom: 1px solid #e9ecef;
    }

    /* Sección de búsqueda */
    .search-card {
        background-color: #f1f3f5;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 25px;
    }

    .search-form {
        width: 100%;
    }

    .search-row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        align-items: flex-end;
    }

    .search-group {
        flex: 1;
        min-width: 200px;
    }

    .search-input, .records-select {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px 15px;
        background-color: white;
        transition: all 0.3s;
    }

        .search-input:focus, .records-select:focus {
            border-color: #a5d8ff;
            box-shadow: 0 0 0 0.2rem rgba(165, 216, 255, 0.25);
        }

    .button-group {
        display: flex;
        gap: 10px;
        align-items: flex-end;
    }

    .btn-search {
        background-color: #d0ebff;
        border-color: #d0ebff;
        color: #1971c2;
        border-radius: 8px;
        padding: 10px 20px;
        transition: all 0.3s;
    }

        .btn-search:hover {
            background-color: #a5d8ff;
            border-color: #a5d8ff;
            color: white;
        }

    .btn-new-client {
        background-color: #b2f2bb;
        border-color: #b2f2bb;
        color: #2b8a3e;
        border-radius: 8px;
        padding: 10px 20px;
        transition: all 0.3s;
    }

        .btn-new-client:hover {
            background-color: #8ce99a;
            border-color: #8ce99a;
            color: white;
        }

    /* Tabla de clientes */
    .client-table {
        width: 100%;
        margin-bottom: 30px;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-header {
        background-color: #f1f3f5;
        color: #495057;
    }

        .table-header th {
            padding: 15px;
            font-weight: 500;
            border-bottom: 2px solid #e9ecef;
            vertical-align: middle;
        }

    .table-row td {
        padding: 12px 15px;
        border-bottom: 1px solid #e9ecef;
        vertical-align: middle;
    }

    .table-row:hover {
        background-color: #f8f9fa;
    }

    /* Botones de acción */
    .action-buttons {
        white-space: nowrap;
    }

    .btn-edit {
        background-color: #d0ebff;
        border-color: #d0ebff;
        color: #1971c2;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        margin-right: 5px;
    }

        .btn-edit:hover {
            background-color: #a5d8ff;
            border-color: #a5d8ff;
            color: white;
        }

    .btn-details {
        background-color: #e6fcf5;
        border-color: #e6fcf5;
        color: #0ca678;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        margin-right: 5px;
    }

        .btn-details:hover {
            background-color: #c3fae8;
            border-color: #c3fae8;
            color: white;
        }

    .btn-delete {
        background-color: #ffdeeb;
        border-color: #ffdeeb;
        color: #c2255c;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

        .btn-delete:hover {
            background-color: #fcc2d7;
            border-color: #fcc2d7;
            color: white;
        }

    /* Pie de página */
    .client-footer {
        margin-top: auto;
        padding-top: 20px;
        border-top: 1px solid #e9ecef;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .footer-links {
        display: flex;
        gap: 15px;
    }

        .footer-links a {
            color: #6c757d;
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer-links a:hover {
                color: #4dabf7;
            }

    /* Iconos */
    .bi {
        margin-right: 8px;
    }

    .bi-people-fill {
        color: #74c0fc;
    }

    .bi-person-badge {
        color: #4dabf7;
    }

    .bi-envelope {
        color: #f783ac;
    }

    .bi-telephone {
        color: #51cf66;
    }

    /* Estilos para DataTables */
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 5px 10px;
        border-radius: 4px;
        margin: 0 2px;
        border: 1px solid #dee2e6;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: linear-gradient(to bottom, #f1f3f5 0%, #e9ecef 100%);
            border: 1px solid #adb5bd;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: linear-gradient(to bottom, #a5d8ff 0%, #74c0fc 100%);
            color: white !important;
            border: 1px solid #4dabf7;
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                },
                "dom": '<"top"f>rt<"bottom"lip><"clear">',
                "responsive": true,
                "pageLength": 10
            });
        });
    </script>
}